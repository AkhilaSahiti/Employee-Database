<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@android:drawable/picture_frame"/>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="1"
            android:layout_column="0"
            android:hint="Id: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:hint=" Employee ID" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="2"
            android:layout_column="0"
            android:hint="Name: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:hint=" Employee Name" />

        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="3"
            android:layout_column="0"
            android:textStyle="bold"
            android:hint="Designation: " />

        <TextView
            android:id="@+id/emp_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:hint=" Employee designation" />

        <TextView
            android:id="@+id/field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="4"
            android:layout_column="0"
            android:textStyle="bold"
            android:hint="Field: " />

        <TextView
            android:id="@+id/emp_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="4"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:hint=" Employee Field" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="5"
            android:layout_column="0"
            android:textStyle="bold"
            android:hint="Email: " />

        <TextView
            android:id="@+id/emp_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="5"
            android:layout_column="1"
            android:hint=" Employee Email"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="6"
            android:layout_column="0"
            android:textStyle="bold"
            android:hint="Phone: " />

        <TextView
            android:id="@+id/emp_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="6"
            android:layout_column="1"
            android:hint=" Employee Phone"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="7"
            android:layout_column="0"
            android:textStyle="bold"
            android:hint="Salary($): " />

        <TextView
            android:id="@+id/emp_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_row="7"
            android:layout_column="1"
            android:hint=" Employee Salary"
            android:textColor="@android:color/black" />
    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/darker_gray">
    </View>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/black"
        android:hint="Contact:"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/phonebtn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/sym_action_call" />

        <ImageButton
            android:id="@+id/emailbtn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@android:drawable/ic_dialog_email" />

        <ImageButton
            android:id="@+id/messagebtn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:hint="Email"
            android:src="@android:drawable/stat_notify_chat" />
    </LinearLayout>
</LinearLayout>