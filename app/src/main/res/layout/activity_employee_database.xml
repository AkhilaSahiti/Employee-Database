<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:padding="5dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="start"
            android:hint="Id: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="start"
            android:hint=" Enter id"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="start"
            android:hint="Name: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="start"
            android:hint=" Enter Name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="start"
            android:hint="Designation: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="start"
            android:hint=" Enter designation"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="start"
            android:hint="Field: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="start"
            android:hint=" Enter Field"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="start"
            android:hint="Email: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="start"
            android:hint=" Enter Email"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="start"
            android:hint="Phone: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="start"
            android:hint="Enter Phone"
            android:inputType="number"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="start"
            android:hint="Salary: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="start"
            android:hint="Enter Salary"
            android:inputType="number"
            android:textColor="@android:color/black" />    android:hint="Salary" />

    </GridLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:hint="Submit"/>
</LinearLayout>